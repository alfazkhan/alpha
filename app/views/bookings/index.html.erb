<h1 class="main-head">Movies</h1>
<br><br><br>
<head>
  <style>
table, th, td {
border: 0.5px solid black;
  border-collapse: collapse;
}
  </style>
</head>
<% @bookings.each do |booking| %>
<div class="col-xs-8 col-xs-offset-2">
  <div class="well well-lg">
    <div class="movie-title">
      <%= link_to booking.Movie, booking_path(booking) %>
    </div>
    <div class="movie-body">
      <%= truncate(booking.Description, length: 300) %>
    </div>
    <div class="movie-actions">
      <%=link_to 'Edit', edit_booking_path(booking), class: "btn btn-xs btn-primary" %>
      <%=link_to 'Delete', booking_path(booking), method: :delete, data:{confirm: "Are you Sure?"},class: "btn btn-xs btn-danger" %>
    </div>
  </div>
</div>

<%end %>


