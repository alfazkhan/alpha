
<h2 style="text-align: center"><%= @bookings.Movie %></h2>
<div class="well col-xs-8 col-xs-offset-2">

  <div align="center">
  <div class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li>Added by:</li>
        <li><%= link_to gravatar_for(@bookings.user), user_path(@bookings.user) %></li>
        <li class="booking-title">
          <%= link_to @bookings.user.username, user_path(@bookings.user) %>
        </li>
        <li><small><%= pluralize(@bookings.user.bookings.count, "Movies Added") if @bookings.user.bookings %></small></li>
      </div>
    </div>
  </div>
  </div>

  <h4 class="center description">
    <strong>Description</strong>
    <hr>
      <%=simple_format(@bookings.Description) %>
    <div class="movie-actions">
      <%=link_to 'Back To List', bookings_path,class: "btn btn-xs btn-success" %>
      <%if logged_in? and (current_user == @bookings.user or current_user.admin?) %>
      <%=link_to 'Edit', edit_booking_path(@bookings), class: "btn btn-xs btn-primary" %>
      <%=link_to 'Delete', delete_booking_path(@bookings), data:{confirm: "Are you Sure?"},class: "btn btn-xs btn-danger" %>
      <%end %>
    </div>
  </h4>
</div>




