
<h2 style="text-align: center"><%= @bookings.Movie %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description">
    <strong>Description</strong>
    <hr>
      <%=simple_format(@bookings.Description) %>
    <div class="movie-actions">
      <%=link_to 'Back To List', bookings_path,class: "btn btn-xs btn-success" %>
      <%=link_to 'Edit', edit_booking_path(@bookings), class: "btn btn-xs btn-primary" %>
      <%=link_to 'Delete', delete_booking_path(@bookings), data:{confirm: "Are you Sure?"},class: "btn btn-xs btn-danger" %>
    </div>
  </h4>
</div>




