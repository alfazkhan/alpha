<div class="main-head">
  <h1>Add Movie</h1>
</div>
<br><br>

<%= render 'layouts/errors', obj: @category  %>

<%= form_for @category, url:{action:'create'}  do |b| %>
  <div class="form-horizontal">


    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= b.label 'Category Name' %>
      </div>
      <div class="col-sm-10">
        <%= b.text_field :name, class:"form-control", placeholder:"Comedy", autofocus: true %>
      </div>
    </div>




    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= b.submit "Add Category" ,class:"btn btn-info"%>
      </div>
    </div>
  </div>
<%end %>


<div class="col-xs-4 col-xs-offset-4">
  [ <%=link_to 'Cancel And Back to List', bookings_path %> ]
</div>
