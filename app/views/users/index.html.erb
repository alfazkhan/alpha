<h1 class="main-head">All Users</h1>
<br><br>

<div class="center">
  <%= will_paginate %>
</div>

<div align="center">
<% @users.each do |user| %>
  <div class="listing">
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <li><%= link_to gravatar_for(user), user_path(user) %></li>
      <li class="booking-title">
        <%= link_to user.username, user_path(user) %>
      </li>
      <li><small><%= pluralize(user.bookings.count, "Movies Added") if user.bookings %></small></li>
      <%if logged_in? and current_user.admin? %>
      <li><%= link_to "Delete User", delete_user_path(user),class: "btn btn-xs btn-danger" %></li>
        <%end %>
    </div>
  </div>
  </div>
<%end%>
</div>

<div class="center">
  <%= will_paginate %>
</div>